	file = {BREVE - An HMPerceptron-Based Chord Recognition System.pdf:/home/tbushnell/GitHub/Singing-AI-Bach/research-docs/ai/BREVE - An HMPerceptron-Based Chord Recognition System.pdf:application/pdf},
